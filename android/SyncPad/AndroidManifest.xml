<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neoba.syncpad"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DocsListActivity"
            android:label="@string/title_activity_docs_list" >
            <intent-filter>
                <action android:name="com.neoba.syncpad.DOCSLISTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DocViewerActivity"
            android:label="@string/title_activity_doc_viewer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neoba.syncpad.DocsListActivity" />

            <intent-filter>
                <action android:name="com.neoba.syncpad.DOCVIEWER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DocEditorActivity"
            android:label="@string/title_activity_doc_editor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.neoba.syncpad.DocViewer" />

            <intent-filter>
                <action android:name="com.neoba.syncpad.DOCEDITOR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShareListActivity"
            android:label="@string/title_activity_share_list" >
                        <intent-filter>
                <action android:name="com.neoba.syncpad.SHARELIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
