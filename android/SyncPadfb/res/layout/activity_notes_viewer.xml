<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlNoteViewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvNotesViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSharedUsers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:maxLines="30"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:transitionName="TRANS" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10" >
    
                    <ImageButton
                        android:id="@+id/bNotesListLeftv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/buttonback"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_create_black_24dp" />

                    <ImageButton
                        android:id="@+id/bNotesListRightv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_weight="5"
                        android:background="@drawable/buttonback"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_send_black_24dp"
                        android:text="SHARE" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:paddingLeft="10dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvSharedUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTimeStamp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:paddingLeft="10dp"
        android:text="Large Text"
        android:textSize="16sp" />

</RelativeLayout>